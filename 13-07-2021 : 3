import java.util.*;
class program3
{
 public static void main(String args[])
 {
  Scanner scn=new Scanner(System.in);
  System.out.println("Enter a string");
  String S=scn.nextLine();
  int c=count(S);
  System.out.println(c);
 }
 static int count(String S)
 {
  String str[]=S.split(" ");
  int n=str.length;
  return n;
 }
} 
..............................
OUTPUT:
      Enter a string
      This is coding class
      4
